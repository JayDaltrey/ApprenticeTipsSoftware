<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApprenticeTipsSoftware</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>

        <br />

        <a href="/Index">
            <center><img src="~/images/ApprenticeTips_logo.png" width="500" height="70" alt="/Index" /></center>
        </a>
        <br />

        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light bg-blue border-bottom box-shadow mb-3 ">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1 ">
                   
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ContactPage"><h4>Contact Page</h4></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ApprenticeshipViewer"><h4>Apprenticeship Viewer</h4></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />
    <br />

    <footer class="border-top footer text-muted">


        <div class="container text-center">

            &copy; 2021 - ApprenticeTipsSoftware 
        </div>
        <div class="container text-center">
            <img src="~/images/WeDevelopNow_logo.png" width="240" height="40" alt="/Index" />
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>